    <h2 class="text-4xl mt-10 ml-3">List Pasien</h2>
    <% if (data.length === 0) { %>
     <h1 class="text-5xl mt-3 text-center font-bold text-red-400">Tidak ada pasien</h1>
    <% } else {%>
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left rtl:text-right text-green-500 dark:text-gray-700 gap-2">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-300 dark:text-gray-700">
                <tr>
                    <th scope="col" class="px-6 py-3">Name</th>
                    <th scope="col" class="px-6 py-3">Gender</th>
                    <th scope="col" class="px-6 py-3">Age</th>
                    <th scope="col" class="px-6 py-3">Status</th>
                    <th scope="col" class="px-6 py-3">Action</th>

                </tr>
            </thead>
            <tbody>
                <% data.forEach(el => { %>
                 <tr class="odd:bg-white odd:dark:bg-gray-100 even:bg-gray-50 even:dark:bg-gray-400 border-b dark:border-gray-700">
                    <td class="px-6 py-4"><%= el.name %></td>
                    <td class="px-6 py-4"><%= el.gender %></td>
                    <td class="px-6 py-4"><%= el.age %></td>
                    <td class="px-6 py-4"><%= el.status %></td>
                    <td class="px-6 py-4">
                    <% if (el.status === "Waiting") { %>
                    <a href="/doctor/<%= el.id %>/accept"><button class="focus:outline-none text-white bg-blue-400 hover:bg-blue-500 focus:ring-4 focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:focus:ring-yellow-900">Accept</button></a>
                    <a href="/doctor/<%= el.id %>/cancel"><button class="focus:outline-none text-white bg-yellow-400 hover:bg-yellow-500 focus:ring-4 focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:focus:ring-yellow-900">Cancel</button></a>
                    <% } %>
                    <% if (el.status === "Accepted") { %>
                    <a href="/doctor/<%= el.id %>/chat"><button class="focus:outline-none text-white bg-purple-400 hover:bg-purple-500 focus:ring-4 focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:focus:ring-yellow-900">Chat Room</button></a>
                    <% } %>
                    </td>
                 </tr>
                <% }) %>
            </tbody>
        </table>
        <% } %>

