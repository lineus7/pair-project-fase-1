<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List Patient</title>
</head>
<body style="display: flex; flex-direction: column; justify-content: center; align-items: center;">
    <a href="/doctor/logout"><button>Logout</button></a>
    <h2><a href="/doctor/statistic">Statistik Obat</a></h2>
    <h2>List Patient</h2>
    <% if (data.length === 0) { %>
     <h1>Anda Kurang Promosi</h1>
    <% } %>
    
        <table border="1">
            <thead>
                <th>Name</th>
                <th>Gender</th>
                <th>Age</th>
                <th>Status</th>
                <th>Action</th>
            </thead>
            <tbody>
                <% data.forEach(el => { %>
                 <tr>
                    <td><%= el.name %></td>
                    <td><%= el.gender %></td>
                    <td><%= el.age %></td>
                    <td><%= el.status %></td>
                    <td>
                    <% if (el.status === "Waiting") { %>
                    <a href="/doctor/<%= el.id %>/accept"><button>Accept</button></a>
                    <a href="/doctor/<%= el.id %>/cancel"><button>Cancel</button></a>
                    <% } %>
                    <% if (el.status === "Accepted") { %>
                    <a href="/doctor/<%= el.id %>/chat"><button>Chat Room</button></a>
                    <% } %>
                    </td>
                 </tr>
                <% }) %>
            </tbody>
        </table>
</body>
</html>